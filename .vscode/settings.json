{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "cSpell.diagnosticLevel": "Information",
  "cSpell.minWordLength": 4,

  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
    {
      "mob-name": "alert",
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "mob-name": "question",
      "tag": "?",
      "color": "#FFFF00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "mob-name": "disabled",
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "mob-name": "todo",
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "mob-name": "highlight",
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "mob-name": "url",
      "tag": "`",
      "color": "#3498DB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ]
}
